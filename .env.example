# fort-gym runtime
OPENAI_API_KEY=
OPENAI_MODEL=gpt-4o-mini
ANTHROPIC_API_KEY=
ANTHROPIC_MODEL=claude-3-5-sonnet-latest

# DFHack backend (Linux host/VM or Mac Lazy Mac Pack)
DFHACK_ENABLED=0
DFHACK_HOST=127.0.0.1
DFHACK_PORT=5000

# DFHack installation path (auto-detected, override if needed)
# Mac (Lazy Mac Pack): DFROOT="$HOME/Applications/Lazy Mac Pack/Dwarf Fortress"
# Linux/VM: DFROOT="/opt/dwarf-fortress" (default)
# DFROOT=

# Optional runtime tuning
TICKS_PER_STEP=200
ARTIFACTS_DIR=fort_gym/artifacts
LLM_MAX_TOKENS=512
LLM_TEMP=0.1
LLM_RATE_LIMIT_TPS=1.0
